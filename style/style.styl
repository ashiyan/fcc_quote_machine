@font-face
	font-family 'Silentina'
	font-style normal
	src url(../fonts/Silentina_Film.ttf)

body
	display flex
	flex-direction column
	align-items center
	background url(../img/film.jpg) no-repeat
	background-size cover
	background-color #0a0a0a
	font-family 'Silentina', sans-serif

.quote-desk
	width 500px
	padding 10px
	border-top 5px solid rgba(255,255,255,.8)
	border-bottom 5px solid rgba(255,255,255,.8)
	border-radius 5px
	background-color rgba(255,255,255,.4)
	transition 200ms
	cursor pointer
	&:hover
		background-color rgba(255,255,255,.5)
		transition 200ms
	
.phrase
	display block
	margin-bottom 10px
	text-align center
	font-size 150%
	
.author
	display block
	text-align right
	font-size 100%
	font-style italic
	
.share
	display flex
	justify-content space-around
	align-items center
	width 120px
	height 30px
	margin 30px 0
	cursor pointer
	border none
	background-color rgba(255,255,255,.4)
	transition 200ms
	&:hover
		background-color rgba(255,255,255,.5)
		transition 200ms
	
.link
	text-decoration none
	
